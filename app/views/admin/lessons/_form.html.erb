<%= form_for @lessons, url: yield(:path_form), html: {class: "form"}, method: yield(:method_form), local: true do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="form-group row">
    <%= f.label :title, t("lessons.index.title"), class: "col-lg-3 col-form-label form-control-label"  %>
    <div class="col-lg-9">
      <%= f.text_field :title, class: "form-control", placeholder: t("lessons.index.title") %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :content, t("lessons.index.content"), class: "col-lg-3 col-form-label form-control-label" %>
    <div class="col-lg-9">
      <%= f.cktext_area :content, class: "form-control", ckeditor: { language: 'uk'}, placeholder: t("lessons.index.content") %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :course, t(".course"), class: "col-lg-3 col-form-label form-control-label" %>
    <div class="col-lg-9">
      <%= f.select :course_id, options_for_select(@list_courses,
      selected: @lessons),
      { }, { class: "form-control" } %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-lg-3 col-form-label form-control-label"></label>
    <div class="col-lg-9">
      <%= link_to t("cancel"), admin_lessons_path, class: "btn btn-secondary" %>
      <%= f.button yield(:button_text), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
