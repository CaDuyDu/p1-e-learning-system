<% provide :title, t("lessons.index.show_lessons") %>

<div class="container py-3" >
  <div class="row">
    <div class="mx-auto col-sm-6">
      <div class="card">
        <div class="card-header">
          <h4 class="mb-0"><%= t "lessons.index.show_lessons" %></h4>
        </div>
        <div class="card-body">
          <%= form_for @lessons, url: "#" do |f| %>
            <div class="form-group row">
              <%= f.label :title,  t("lessons.index.title"), class: "col-lg-3 col-form-label form-control-label"  %>
              <div class="col-lg-9 padding-top-10">
                <h4><%= @lessons.title %></h4>
              </div>
            </div>
            <div class="form-group row">
              <%= f.label :content, t("lessons.index.content"), class: "col-lg-3 col-form-label form-control-label"  %>
              <div class="col-lg-9 padding-top-10">
                <h4><%= @lessons.content %></h4>
              </div>
            </div>
            <div class="form-group row">
              <%= f.label :course, t("courses.index.course"), class: "col-lg-3 col-form-label form-control-label" %>
              <div class="col-lg-9">
                <%= f.select :course_id, options_for_select(@list_courses,
                selected: @lessons),
                { }, { class: "form-control", disabled: "true"  } %>
              </div>
            </div>
            <div class="form-group row">
              <label class="col-lg-3 col-form-label form-control-label"></label>
              <div class="col-lg-9">
                <%= link_to t("back"), admin_lessons_path, class: "btn btn-secondary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
