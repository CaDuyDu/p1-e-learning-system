<% provide :title, t(".show_user") %>
<div class="container py-3">
  <div class="row">
    <div class="mx-auto col-sm-6">
      <div class="card">
        <div class="card-header">
          <h4 class="mb-0"><%= t ".show_user" %></h4>
        </div>
        <div class="card-body">
          <%= form_for @user do |f| %>
            <div class="form-group row">
              <%= f.label :email, t(".email"), class: "col-lg-3 col-form-label form-control-label"  %>
              <div class="col-lg-9 padding-top-10">
                <h4><%= @user.email %></h4>
              </div>
            </div>
            <div class="form-group row">
              <%= f.label :fullname, t(".full_name"), class: "col-lg-3 col-form-label form-control-label"  %>
              <div class="col-lg-9 padding-top-10">
                <h4><%= @user.fullname %></h4>
              </div>
            </div>
            <div class="form-group row">
              <%= f.label :address, t(".address"), class: "col-lg-3 col-form-label form-control-label" %>
              <div class="col-lg-9 padding-top-10">
                <h4><%= @user.address %></h4>
              </div>
            </div>
            <div class="form-group row">
              <%= f.label :birth, t(".birth"), class: "col-lg-3 col-form-label form-control-label" %>
              <div class="col-lg-9 padding-top-10">
                <h4><%= @user.birth %></h4>
              </div>
            </div>
            <div class="form-group row">
              <%= f.label :numberphone, t(".number_phone"), class: "col-lg-3 col-form-label form-control-label" %>
              <div class="col-lg-9 padding-top-10">
                <h4><%= @user.numberphone %></h4>
              </div>
            </div>
            <div class="form-group row">
              <%= f.label :gender, t(".gender"), class: "col-lg-3 col-form-label form-control-label" %>
              <div class="col-lg-9 padding-top-10">
                <h4><%= @user.gender %></h4>
              </div>
            </div>
            <div class="form-group row">
              <%= f.label :created_at, t(".created_at"), class: "col-lg-3 col-form-label form-control-label" %>
              <div class="col-lg-9 padding-top-10">
                <h4><%= @user.created_at %></h4>
              </div>
            </div>
            <div class="form-group row">
              <%= f.label :updated_at, t(".updated_at"), class: "col-lg-3 col-form-label form-control-label" %>
              <div class="col-lg-9 padding-top-10">
                <h4><%= @user.updated_at %></h4>
              </div>
            </div>
            <div class="form-group row">
              <label class="col-lg-3 col-form-label form-control-label"></label>
              <div class="col-lg-9">
                <%= link_to t("back"), admin_users_path, class: "btn btn-secondary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
