<%= form_for @video, url: yield(:path_form), html: {class: "form"}, method: yield(:method_form), local: true do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="form-group row">
    <%= f.label :name_video, t(".name_video"), class: "col-lg-3 col-form-label form-control-label"  %>
    <div class="col-lg-9">
      <%= f.text_field :name_video, class: "form-control", placeholder: t(".placeholder_name_video") %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :link, t(".link"), class: "col-lg-3 col-form-label form-control-label"  %>
    <div class="col-lg-9">
      <%= f.text_field :link, class: "form-control", placeholder: t(".placeholder_link") %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :lesson_number, t(".lesson_number"), class: "col-lg-3 col-form-label form-control-label"  %>
    <div class="col-lg-9">
      <%= f.number_field :lesson_number, class: "form-control", placeholder: t(".placeholder_lesson_number") %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :description, t(".description"), class: "col-lg-3 col-form-label form-control-label" %>
    <div class="col-lg-9">
      <%= f.text_field :description, class: "form-control", placeholder: t(".placeholder_description") %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :subject, t(".subject"), class: "col-lg-3 col-form-label form-control-label" %>
    <div class="col-lg-9">
      <%= f.select :subject_id, options_for_select(@list_subjects,
      selected: @video),
      { }, { class: "form-control" } %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-lg-3 col-form-label form-control-label"></label>
    <div class="col-lg-9">
      <%= link_to t("cancel"), admin_videos_path, class: "btn btn-secondary" %>
      <%= f.button yield(:button_text), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
