<div id="app">
  <div class="row">
    <div class="breadcrumbs">
      <div class="col-sm-4">
        <div class="page-header float-left">
          <div class="page-title">
            <% if can? :create, Video %>
              <h1><%=link_to t(".new_videos"), new_admin_video_path, class: "btn btn-outline-success" %></h1>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-sm-8">
        <div class="page-header float-right">
          <div class="page-title">
            <ol class="breadcrumb text-right">
              <li><a href="#"></a></li>
            </ol>
          </div>
        </div>
      </div>
    </div>
    <div class="content mt-3">
      <div class="animated fadeIn">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header">
                <strong class="card-title"><%= t ".videos_list" %></strong>
              </div>
              <div class="table-responsive">
                <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                  <thead>
                    <tr>
                      <th scope="col"><%= t "number" %></th>
                      <th scope="col"><%= t ".name_video" %></th>
                      <th scope="col"><%= t ".video" %></th>
                      <th scope="col"><%= t ".lesson_number" %></th>
                      <th scope="col"><%= t ".subject" %></th>
                      <th scope="col"><%= t "act" %></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @videos.each_with_index do |video, index| %>
                      <tr>
                        <th scope="row"><%= index+1 %></th>
                        <td><%= video.name_video %></td>
                        <td><%= video.link.html_safe %></td>
                        <td><%= video.lesson_number %></td>
                        <td><%= video.subject.name_subject %></td>
                        <td>
                          <div class="col-4">
                            <%= link_to  admin_video_path(video), "data-tooltip" => t("details"),
                              class: "btn btn-outline-primary btn-border-radius" do %>
                              <i class="fa fa-info-circle" aria-hidden="true"></i>
                            <% end %>
                          </div>
                          <div class="col-4">
                            <%= link_to  edit_admin_video_path(video), "data-tooltip" => t("edit"),
                              class: "btn btn-outline-info btn-border-radius" do %>
                              <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                            <% end %>
                          </div>
                          <div class="col-4">
                            <%= link_to admin_video_path(video), "data-tooltip" => t("delete"),
                              method: :delete, data: {confirm: t("you_sure")},
                              class: "btn btn-outline-danger btn-border-radius" do %>
                              <i class="fa fa-trash-o" aria-hidden="true"></i>
                            <% end %>
                          </div>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
                <%= paginate @videos, theme: "twitter-bootstrap-4" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
