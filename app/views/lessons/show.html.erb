<% provide :title, t("lessons.index.show_lessons") %>

<div class="container py-3" >
  <div class="row">
    <div class="mx-auto col-sm-12">
      <div class="card">
        <div class="card-header">
          <h4 class="mb-0"><%= t "lessons.index.show_lessons" %></h4>
        </div>
        <div class="card-body">
          <%= form_for @lessons, url: "#" do |f| %>
            <div class="form-group row">
              <%= f.label :lesson_videos, t("lessons.index.video"),
                class: "col-lg-3 col-form-label form-control-label"  %>
              <div class="col-lg-9 padding-top-10">
                <h4>
                  <% if @lessons.lesson_videos[0].nil? %>
                    <%= t "no_video" %>
                  <% else %>
                    <%= @lessons.lesson_videos[0].video.link.html_safe %>
                  <% end %>
              </div>
            </div>
            <div class="form-group row">
              <h3 class="margin-3em-auto"><%= t "lessons.index.content" %></h3>
              <div class="col-lg-12 margin-left-right-2em">
                <h4><%= @lessons.content.html_safe %></h4>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-lg-9">
                <%= link_to t("back"), courses_user_path(@lessons.course),
                  class: "btn btn-secondary float-left" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
