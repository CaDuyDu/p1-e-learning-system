<div class="row">
  <div class="breadcrumbs">
    <div class="col-sm-4">
      <div class="page-header float-left">
        <div class="page-title">
        </div>
      </div>
    </div>
    <div class="col-sm-8">
      <div class="page-header float-right">
        <div class="page-title">
          <ol class="breadcrumb text-right">
            <li><a href="#"></a></li>
          </ol>
        </div>
      </div>
    </div>
  </div>
  <div class="content mt-3">
    <div class="animated fadeIn">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <strong class="card-title"><%= t ".list_lesson_of_course" %></strong>
            </div>
            <div class="table-responsive">
              <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                <thead>
                  <tr>
                    <th scope="col"><%= t "number" %></th>
                    <th scope="col"><%= t ".title" %></th>
                    <th scope="col"><%= t "lessons.index.video" %></th>
                    <th scope="col"><%= t "act" %></th>
                  </tr>
                </thead>
                <tbody>
                  <% @lessons.each_with_index do |lesson, index| %>
                    <tr>
                      <th scope="row"><%= index+1 %></th>
                      <td><%= lesson.title %></td>
                      <td>
                        <% if lesson.lesson_videos[0].nil? %>
                          <%= t "no_video" %>
                        <% else %>
                          <%= lesson.lesson_videos[0].video.link.html_safe %>
                        <% end %>
                      </td>
                      <td>
                        <%= link_to  lesson_path(lesson), "data-tooltip" =>"Details Lesson",
                          class: "btn btn-outline-info btn-border-radius" do %>
                          <i class="fa fa-book" aria-hidden="true"></i>
                        <% end %>
                        <%= link_to  homework_path(lesson), "data-tooltip" => "Homework",
                          class: "btn btn-outline-success btn-border-radius" do %>
                          <i class="fa fa-pencil-square" aria-hidden="true"></i>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
              <%= paginate @lessons, theme: "twitter-bootstrap-4" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
